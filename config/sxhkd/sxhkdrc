#light Basic binds
super + Return
	$TERMINAL
super + r
	rofi -show drun -modi drun,window
super + shift + r
    $TERMINAL --class=sway-launcher -e sway-launcher-desktop
super + i
	$TERMINAL -e htop
super + w
	$BROWSER --profile-directory="Default"
super + s
	$BROWSER --profile-directory="Profile 1"
super + shift + w
	$BROWSER --profile-directory="Profile 4"
super + shift + n
	$BROWSER --incognito
super + f
	$TERMINAL -e ranger
super + p
	code
super + shift + s
	flameshot gui
super + c
    GTK_THEME=Qogir-manjaro-light com.github.parnold-x.nasc
super + shift + ctrl + s
    ocr
super + space
    bolt --rofi-search
super + slash
    flash_window

# Et cetera...
super + shift + x
	/home/prayag_s/.config/rofi/scripts_powermenu.sh
super + Escape
    xset s activate
XF86AudioMute
	volume-control mute
XF86Audio{Raise,Lower}Volume
	volume-control {up,down}
XF86Audio{Prev,Next}
	playerctl --player=playerctld {previous,next}
XF86AudioPlay
	playerctl --player=playerctld play-pause
XF86MonBrightnessDown
	xbacklight -dec 5
XF86MonBrightnessUp
	xbacklight -inc 5
