// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "title_bar": {
    "show_menus": false,
    "show_branch_icon": true
  },
  "search": {
    "regex": true
  },
  "lsp_document_colors": "inlay",
  "indent_guides": {
    "background_coloring": "disabled",
    "coloring": "fixed"
  },
  "tab_size": 2,
  "gutter": {
    "min_line_number_digits": 4
  },
  "relative_line_numbers": true,
  "show_signature_help_after_edits": true,
  "agent_buffer_font_size": 14.0,
  "confirm_quit": true,
  "terminal": {
    "toolbar": {
      "breadcrumbs": false
    }
  },
  "experimental.theme_overrides": {
    "syntax": {
      "comment": { "font_style": "normal" },
      "comment.doc": { "font_style": "normal" },
      "keyword": { "font_style": "normal" },
      "predictive": { "font_style": "normal" }
    }
  },
  "languages": {
    "YAML": {
      "formatter": "language_server"
    }
  },
  "lsp": {
    "yaml-language-server": {
      "settings": {
        "yaml": {
          "format": {
            "singleQuote": true
          }
        }
      }
    }
  },
  "edit_predictions": {
    "disabled_globs": [],
    "mode": "eager",
    "copilot": {
      "proxy": null,
      "proxy_no_verify": null
    }
  },
  "scrollbar": {
    "show": "never"
  },
  "agent": {
    "default_profile": "write",
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4-thinking"
    },
    "stream_edits": true,
    "notify_when_agent_waiting": "all_screens",
    "play_sound_when_agent_done": true
  },
  "show_edit_predictions": true,
  "features": {
    "edit_prediction_provider": "zed"
  },
  "vim_mode": true,
  "vim": {
    "toggle_relative_line_numbers": true,
    "use_smartcase_find": true,
    "use_system_clipboard": "on_yank"
  },
  "ui_font_size": 15,
  "buffer_font_size": 14,
  "agent_ui_font_size": 16,
  "buffer_font_family": "Maple Mono NF",
  "ui_font_family": "Iosevka Aile",
  "use_smartcase_search": true,
  "inlay_hints": {
    "enabled": false,
    "show_background": true
  },
  "tabs": {
    "git_status": true,
    "show_diagnostics": "all"
  },
  "diagnostics": {
    "include_warnings": true,
    "inline": {
      "enabled": true
    }
  },
  // Below portion will almost always be out of date on git
  "icon_theme": "Zed (Default)",
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Melange Dark"
  },
  "language_models": {
    "openai": {
      "api_url": "http://10.100.1.108:8080/v1"
    }
  }
}
